<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Button. -->
    <style name="ButtomBase" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/calc_button_textSize</item>
    </style>

    <style name="ButtomMD" parent="ButtomBase">
        <item name="colorButtonNormal">@color/colorAccent</item>
    </style>

    <style name="ButtomMDDark" parent="ButtomBase">
        <item name="colorButtonNormal">@color/gray_700</item>
    </style>

    <style name="ButtomMDDarker" parent="ButtomBase">
        <item name="colorButtonNormal">@color/gray_800</item>
    </style>

    <style name="ButtomMDDanger" parent="ButtomBase">
        <item name="colorButtonNormal">@color/red_500</item>
    </style>

</resources>
